<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:id="@+id/main">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/revealedWord" android:text="revealed word"/>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="282dp" android:rowCount="2" android:columnCount="2" android:id="@+id/b"
            android:layout_weight="0.87">
        <ImageView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:id="@+id/imageView" android:layout_row="0" android:layout_column="0"/>
        <ImageView android:layout_width="145dp" android:layout_height="145dp" android:id="@+id/imageView2"
                   android:layout_row="0" android:layout_column="1"/>
        <ImageView android:layout_width="145dp" android:layout_height="145dp" android:id="@+id/imageView3"
                   android:layout_row="1" android:layout_column="0"/>
        <ImageView android:layout_width="145dp" android:layout_height="145dp" android:id="@+id/imageView4"
                   android:layout_row="1" android:layout_column="1"/>
    </GridLayout>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/buttonLayout">


    </GridLayout>
    <Button
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="New Button"
            android:id="@+id/button" android:layout_gravity="center_horizontal"/>
</LinearLayout>

